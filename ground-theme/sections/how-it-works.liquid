        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Choose which apps you want to block using the Ground app."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "title": "Select distractions to block",
            "description": "Choose which apps you want to block using the Ground app."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Place Ground anywhere",
