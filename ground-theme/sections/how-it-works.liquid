    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get started in seconds. No complicated setup required."
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
