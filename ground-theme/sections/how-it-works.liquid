{%- comment -%}
  GROUND - How It Works Section
  Features: Step-by-step process with numbered cards
{%- endcomment -%}

<section class="section gradient-bg" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="section-header" data-animate>
      {%- if section.settings.overline != blank -%}
        <p class="overline">{{ section.settings.overline }}</p>
      {%- endif -%}

      <h2 class="heading-xl">{{ section.settings.heading | default: 'How It Works' }}</h2>

      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <div class="how-it-works-steps">
      {%- for block in section.blocks -%}
        <div class="step-card glass-card" data-animate style="animation-delay: {{ forloop.index | times: 100 }}ms;">
          <div class="step-number">{{ forloop.index }}</div>

          {%- if block.settings.image != blank -%}
            <div class="step-image">
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title }}"
                width="600"
                height="auto"
                loading="lazy"
              >
            </div>
          {%- endif -%}

          <h3 class="heading-sm">{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .how-it-works-steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 4rem;
  }

  .step-card {
    text-align: center;
    padding: 2.5rem 2rem;
  }

  .step-number {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: var(--white);
    font-size: 1.25rem;
    font-weight: 700;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    box-shadow: 0 8px 20px rgba(108, 92, 231, 0.3);
  }

  .step-image {
    margin: 0 -1rem 1.5rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .step-image img {
    width: 100%;
    height: auto;
  }

  .step-card h3 {
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .step-card p {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.7;
  }

  @media (max-width: 1024px) {
    .how-it-works-steps {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>

