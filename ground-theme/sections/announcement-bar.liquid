{%- comment -%}
  GROUND - Announcement Bar
  Features: Top banner for promotions
{%- endcomment -%}

{%- if section.settings.show_announcement -%}
<div class="announcement-bar" data-section-id="{{ section.id }}">
  <div class="container">
    <p class="announcement-text">
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}">{{ section.settings.text }}</a>
      {%- else -%}
        {{ section.settings.text }}
      {%- endif -%}
    </p>
  </div>
</div>
{%- endif -%}

<style>
  .announcement-bar {
    background: var(--text-primary);
    color: var(--white);
    padding: 0.75rem 0;
    text-align: center;
  }

  .announcement-text {
    font-size: 0.875rem;
    font-weight: 500;
    margin: 0;
  }

  .announcement-text a {
    color: inherit;
    text-decoration: none;
  }

  .announcement-text a:hover {
    text-decoration: underline;
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "div",
  "class": "announcement-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "FREE SHIPPING ON 2+ GROUNDS"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}
