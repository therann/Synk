{%- comment -%}
  GROUND - Meet Ground Section
  Features: Product introduction with image and description
{%- endcomment -%}

<section class="section" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="meet-ground {% if section.settings.reverse_layout %}meet-ground-reverse{% endif %}">
      <div class="meet-ground-image" data-animate>
        {%- if section.settings.image != blank -%}
          <div class="meet-ground-image-wrapper">
            <img
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | default: 'Ground Device' }}"
              width="800"
              height="auto"
              loading="lazy"
            >
          </div>
        {%- else -%}
          <div class="meet-ground-placeholder glass-card">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
        {%- endif -%}
      </div>

      <div class="meet-ground-content" data-animate>
        {%- if section.settings.overline != blank -%}
          <p class="overline">{{ section.settings.overline }}</p>
        {%- endif -%}

        <h2 class="heading-xl">{{ section.settings.heading | default: 'Meet Ground' }}</h2>

        {%- if section.settings.description != blank -%}
          <p class="lead">{{ section.settings.description }}</p>
        {%- endif -%}

        {%- if section.settings.cta_text != blank -%}
          <a href="{{ section.settings.cta_link }}" class="btn btn-primary">
            {{ section.settings.cta_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .meet-ground {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  .meet-ground-reverse {
    direction: rtl;
  }

  .meet-ground-reverse > * {
    direction: ltr;
  }

  .meet-ground-image-wrapper {
    position: relative;
  }

  .meet-ground-image-wrapper::before {
    content: '';
    position: absolute;
    inset: -20px;
    background: linear-gradient(135deg, rgba(108, 92, 231, 0.1), rgba(253, 121, 168, 0.1));
    border-radius: 50%;
    filter: blur(60px);
    z-index: -1;
  }

  .meet-ground-image img {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 24px;
  }

  .meet-ground-placeholder {
    aspect-ratio: 1;
    max-width: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
  }

  .meet-ground-content {
    max-width: 500px;
  }

  .meet-ground-content .overline {
    margin-bottom: 1rem;
  }

  .meet-ground-content h2 {
    margin-bottom: 1.5rem;
  }

  .meet-ground-content .lead {
    margin-bottom: 2rem;
  }

  @media (max-width: 1024px) {
    .meet-ground {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .meet-ground-reverse {
      direction: ltr;
    }

    .meet-ground-content {
      max-width: 600px;
      margin: 0 auto;
    }

    .meet-ground-image img {
      margin: 0 auto;
    }
  }
</style>

{% schema %}
{
  "name": "Meet Ground",
  "tag": "section",
  "class": "meet-ground-section",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline Text",
      "default": "Introducing"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet Ground"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A physical device that completely removes the ability to bypass app blocks and notifications that go with it. Stay setup. <strong>No subscriptions.</strong></p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Buy Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "reverse_layout",
      "label": "Reverse Layout",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Meet Ground"
    }
  ]
}
{% endschema %}
