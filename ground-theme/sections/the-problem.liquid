{%- comment -%}
  GROUND - The Problem Section
  Features: Problem statement with illustration
{%- endcomment -%}

<section class="section" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="problem-section {% if section.settings.reverse_layout %}problem-section-reverse{% endif %}">
      <div class="problem-content" data-animate>
        {%- if section.settings.overline != blank -%}
          <p class="overline">{{ section.settings.overline }}</p>
        {%- endif -%}

        <h2 class="heading-xl">{{ section.settings.heading | default: 'The Problem' }}</h2>

        <div class="problem-text">
          {%- for block in section.blocks -%}
            <p>{{ block.settings.text }}</p>
          {%- endfor -%}
        </div>

        {%- if section.settings.cta_text != blank -%}
          <a href="{{ section.settings.cta_link }}" class="btn btn-primary mt-lg">
            {{ section.settings.cta_text }}
          </a>
        {%- endif -%}
      </div>

      <div class="problem-image" data-animate>
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 700 }}"
            alt="{{ section.settings.image.alt | default: 'The Problem' }}"
            width="700"
            height="auto"
            loading="lazy"
          >
        {%- else -%}
          <div class="problem-placeholder glass-card">
            <svg width="200" height="200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.5">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M16 16s-1.5-2-4-2-4 2-4 2"></path>
              <line x1="9" y1="9" x2="9.01" y2="9"></line>
              <line x1="15" y1="9" x2="15.01" y2="9"></line>
            </svg>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .problem-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  .problem-section-reverse {
    direction: rtl;
  }

  .problem-section-reverse > * {
    direction: ltr;
  }

  .problem-content .overline {
    margin-bottom: 1rem;
  }

  .problem-content h2 {
    margin-bottom: 2rem;
  }

  .problem-text p {
    color: var(--text-secondary);
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .problem-text p:last-child {
    margin-bottom: 0;
  }

  .problem-image img {
    width: 100%;
    max-width: 550px;
    height: auto;
  }

  .problem-placeholder {
    aspect-ratio: 1;
    max-width: 550px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
  }

  @media (max-width: 1024px) {
    .problem-section {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .problem-section-reverse {
      direction: ltr;
    }

    .problem-image {
      order: -1;
      text-align: center;
    }

    .problem-image img {
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>

{% schema %}
{
  "name": "The Problem",
  "tag": "section",
  "class": "problem-section",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline Text",
      "default": "Why We Built This"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Problem"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "checkbox",
      "id": "reverse_layout",
      "label": "Reverse Layout",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Too often, our phones pull us away from the moments that matter."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "The Problem",
      "blocks": [
        {
          "type": "paragraph",
          "settings": {
            "text": "Too often, our phones pull us away from the moments that matter."
          }
        },
        {
          "type": "paragraph",
          "settings": {
            "text": "The constant notifications, social media, and infinite feeds left us feeling overwhelmed and drained."
          }
        },
        {
          "type": "paragraph",
          "settings": {
            "text": "And even with good intentions, distractions usually won. So, we created GROUND."
          }
        }
      ]
    }
  ]
}
{% endschema %}
