{%- comment -%}
  GROUND - Why Ground Section
  Features: Benefits and value proposition page
{%- endcomment -%}

<section class="section gradient-bg gradient-bg-animated" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="why-hero" data-animate>
      <p class="overline">{{ section.settings.overline | default: 'Why Ground' }}</p>
      <h1 class="heading-display">{{ section.settings.heading | default: 'Focus is a Superpower' }}</h1>
      <p class="lead">{{ section.settings.subheading }}</p>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="why-stats" data-animate>
      {%- for block in section.blocks -%}
        {%- if block.type == 'stat' -%}
          <div class="why-stat glass-card">
            <span class="why-stat-number text-gradient">{{ block.settings.number }}</span>
            <span class="why-stat-label">{{ block.settings.label }}</span>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="why-benefits">
      {%- for block in section.blocks -%}
        {%- if block.type == 'benefit' -%}
          <div class="why-benefit {% if forloop.index == 2 %}why-benefit-reverse{% endif %}" data-animate>
            <div class="why-benefit-content">
              <h2 class="heading-lg">{{ block.settings.title }}</h2>
              <p>{{ block.settings.description }}</p>
            </div>
            {%- if block.settings.image != blank -%}
              <div class="why-benefit-image">
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  alt="{{ block.settings.title }}"
                  width="600"
                  height="auto"
                  loading="lazy"
                >
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .why-hero {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 0;
  }

  .why-hero .overline {
    margin-bottom: 1rem;
  }

  .why-hero h1 {
    margin-bottom: 1.5rem;
  }

  .why-hero .lead {
    max-width: 600px;
    margin: 0 auto;
  }

  .why-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .why-stat {
    text-align: center;
    padding: 3rem 2rem;
  }

  .why-stat-number {
    display: block;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .why-stat-label {
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .why-benefits {
    display: flex;
    flex-direction: column;
    gap: 6rem;
  }

  .why-benefit {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .why-benefit-reverse {
    direction: rtl;
  }

  .why-benefit-reverse > * {
    direction: ltr;
  }

  .why-benefit-content h2 {
    margin-bottom: 1rem;
  }

  .why-benefit-content p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .why-benefit-image img {
    width: 100%;
    max-width: 500px;
    border-radius: 24px;
  }

  @media (max-width: 1024px) {
    .why-stats {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .why-benefit {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .why-benefit-reverse {
      direction: ltr;
    }

    .why-benefit-image {
      order: -1;
    }

    .why-benefit-image img {
      margin: 0 auto;
    }
  }
</style>

